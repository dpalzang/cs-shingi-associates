---
// src/pages/admin.astro
import Layout from '../layouts/Layout.astro';

const currentYear = new Date().getFullYear();
---

<Layout title="Staff Portal | CS Singhi">
  <main class="h-screen w-full flex items-center justify-center bg-obsidian relative overflow-hidden font-sans">
    
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,_rgba(197,160,89,0.08),transparent_70%)] pointer-events-none"></div>
    
    <div class="absolute inset-0 opacity-[0.03]" 
         style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 40px 40px;">
    </div>

    <div class="relative z-10 w-full max-w-sm mx-6 group">
      
      <div class="absolute -inset-0.5 bg-gradient-to-b from-gold-500/30 to-transparent rounded-lg blur opacity-40 group-hover:opacity-60 transition duration-1000"></div>
      
      <div class="relative bg-[#080808] border border-white/10 p-12 rounded-lg shadow-2xl">
        
        <div class="flex flex-col items-center mb-10">
           <img 
             src="/images/logo.jpg" 
             alt="CS Singhi" 
             class="h-24 object-contain mb-6 drop-shadow-xl opacity-90" 
           />
           <div class="h-[1px] w-12 bg-gradient-to-r from-transparent via-gold-500/50 to-transparent"></div>
        </div>

        <div class="text-center mb-12">
          <h1 class="text-3xl font-serif font-medium text-white mb-2 tracking-wide">
            Internal Access
          </h1>
          <p class="text-xs font-sans uppercase tracking-[0.2em] text-neutral-500 font-medium">
            Restricted Entry
          </p>
        </div>

        <a 
          href="/keystatic" 
          class="group/btn relative block w-full overflow-hidden rounded-sm bg-gold-500 py-4 text-center transition-transform active:scale-[0.99]"
        >
          <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent translate-x-[-100%] group-hover/btn:translate-x-[100%] transition-transform duration-700 ease-in-out"></span>
          
          <span class="relative text-xs font-bold uppercase tracking-[0.25em] text-obsidian group-hover/btn:text-black">
            Authenticate
          </span>
        </a>

        <div class="mt-10 text-center space-y-2">
          <p class="text-[10px] text-neutral-700 font-mono tracking-widest">
            SECURE CONNECTION
          </p>
          <p class="text-[10px] text-neutral-800 font-mono">
                C.S. SINGHI & ASSOCIATES Â© {currentYear}
              </p>
        </div>

      </div>
    </div>

  </main>
</Layout>