---
// src/components/ServicesShowcase.astro

const services = [
  {
    id: "architecture",
    title: "Architectural Design",
    desc: "From concept to council approval. We create structures that balance aesthetic daring with structural integrity.",
    image: "https://www.globaldisconnect.org/wp-content/uploads/2024/03/3-Cedar-House-an-example-of-Dhajji-Neo-Tudor-hybrid-architecture-in-Shimla-Himachal-Pradesh-scaled.jpeg",
    span: "md:col-span-2 md:row-span-2", // Big feature block
    style: "dark"
  },
  {
    id: "land",
    title: "Land Development",
    desc: "Strategic land sourcing and topographic planning for high-value commercial and residential projects.",
    image: "https://images.unsplash.com/photo-1500382017468-9049fed747ef?q=80&w=2000", // Landscape shot
    span: "md:col-span-1 md:row-span-1",
    style: "light"
  },
  {
    id: "properties",
    title: "Premium Properties",
    desc: "Exclusive listings and property management for Gangtok's most sought-after addresses.",
    image: "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?q=80&w=2053",
    span: "md:col-span-1 md:row-span-1",
    style: "light"
  },
  {
    id: "ventures",
    title: "Future Ventures",
    desc: "Expanding into hospitality and sustainable energy solutions across the Northeast.",
    image: null, // Text-only block for contrast
    span: "md:col-span-3 md:row-span-1", // Full width strip
    style: "accent"
  }
];
---

<section id="services" class="py-24 px-6 md:px-12 bg-[#f5f5f5]">
  <div class="max-w-7xl mx-auto">
    
    {/* HEADER */}
    <div class="mb-16 flex flex-col md:flex-row md:items-end justify-between border-b border-neutral-300 pb-8 gap-6">
      <div class="text-left">
        <span class="text-xs font-bold tracking-[0.3em] uppercase text-amber-700 block mb-4">
          Our Expertise
        </span>
        <h2 class="text-4xl md:text-5xl font-light text-neutral-900 leading-[0.95]">
          Holistic <span class="font-serif italic text-neutral-500">Development</span>
        </h2>
      </div>
      
      <p class="text-neutral-500 max-w-md text-sm leading-relaxed text-left md:text-right">
        Beyond listings, we offer a multidisciplinary approach merging architecture, engineering, and strategic land development.
      </p>
    </div>

    {/* GRID LAYOUT */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 auto-rows-[300px]">
      
      {services.map((service) => (
        /* CHANGED: Div to Anchor (<a>), added href, added 'block' class to ensure layout holds */
        <a 
          href={`/services/${service.id}`}
          class={`relative group block overflow-hidden rounded-sm transition-all duration-500 hover:shadow-2xl ${service.span}`}
        >
          
          {/* Background Image (If exists) */}
          {service.image && (
            <div class="absolute inset-0">
              <img 
                src={service.image} 
                alt={service.title} 
                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105 filter grayscale group-hover:grayscale-0"
              />
              <div class="absolute inset-0 bg-black/60 group-hover:bg-black/40 transition-colors duration-500"></div>
            </div>
          )}

          {/* Accent Block (No Image) - Deep Obsidian */}
          {!service.image && (
             <div class="absolute inset-0 bg-[#1a1a1a] group-hover:bg-amber-900 transition-colors duration-500">
                <div class="absolute inset-0 opacity-10" 
                     style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 20px 20px;">
                </div>
             </div>
          )}

          {/* Content Overlay */}
          <div class="relative h-full flex flex-col justify-end p-8 z-10">
            <div class={`transform transition-transform duration-500 group-hover:-translate-y-2`}>
              <h3 class="text-2xl font-light mb-2 text-white">
                {service.title}
              </h3>
              
              <div class="h-[1px] w-12 bg-amber-500 mb-4 transition-all duration-500 group-hover:w-full"></div>
              
              <p class="text-sm leading-relaxed text-neutral-300 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                {service.desc}
              </p>
            </div>

            {/* Corner Icon */}
            <div class="absolute top-6 right-6 opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-2 group-hover:translate-x-0">
              <span class="text-white text-xl">â†—</span>
            </div>
          </div>
        </a>
      ))}

    </div>
  </div>
</section>