---
// src/components/AnniversaryShowcase.astro
import AnniversaryTimeline from './AnniversaryTimeline.astro';
---

<section id="anniversary" class="py-32 px-6 bg-[#f9f9f9] overflow-hidden">
  <div class="max-w-7xl mx-auto">
    
    <div class="flex flex-row items-start gap-6 md:gap-12 mb-24">
      
      <div class="pt-2 shrink-0">
        <span class="block text-[10px] md:text-xs tracking-[0.3em] uppercase text-amber-700 font-semibold 
          [writing-mode:vertical-rl] rotate-180 whitespace-nowrap">
          Since 2001
        </span>
      </div>

      <div>
        <h2 class="text-5xl md:text-8xl font-light tracking-tighter leading-[0.9] text-neutral-900 mb-10">
          A Quarter Century <br/>
          <span class="font-serif italic text-neutral-400">of Design Excellence</span>
        </h2>
        <p class="text-xl md:text-2xl text-neutral-600 max-w-2xl font-light leading-relaxed">
          From the steep terrains of Gangtok to a Pan-India visionâ€”shaping skylines with integrity for 25 years.
        </p>
      </div>
    </div>

    {/* IMAGE & TIMELINE GRID */}
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start mb-32">
      <div class="lg:col-span-7 relative group">
        <div class="aspect-[4/5] bg-neutral-200 overflow-hidden shadow-sm">
          <img 
            src="https://cdn.ca.emap.com/wp-content/uploads/sites/12/1973/02/Img1_660_879659229.jpg" 
            alt="Legacy Architecture" 
            class="w-full h-full object-cover grayscale contrast-125 transition-transform duration-700 group-hover:scale-105"
          />
        </div>
        {/* Floating "25 Years" Box */}
        <div class="absolute -bottom-12 -right-12 bg-white p-16 hidden lg:block border border-neutral-100 shadow-xl">
          <div class="text-[120px] font-serif leading-none text-neutral-900">25</div>
          <div class="text-xs tracking-[0.5em] uppercase text-amber-800 mt-2 font-bold text-center">Years</div>
        </div>
      </div>

      <div class="lg:col-span-5 lg:pl-12 pt-10">
        <div class="flex items-center gap-4 mb-8">
          <div class="h-[1px] w-12 bg-amber-700"></div>
          <h3 class="text-xs tracking-[0.4em] uppercase text-neutral-500 font-bold">The Journey</h3>
        </div>
        <AnniversaryTimeline />
      </div>
    </div>

    {/* QUOTE SECTION */}
    <div class="border-t border-neutral-200 pt-20">
      <div class="max-w-3xl mx-auto text-center">
        <blockquote class="text-3xl md:text-4xl font-light text-neutral-800 mb-12 leading-tight tracking-tight">
          "True architecture is measured not just in structures, but in the <span class="font-medium text-black italic">ethical foundation</span> upon which they are built."
        </blockquote>
        
        <div class="flex flex-col items-center">
           <div class="h-10 w-[1px] bg-amber-700 mb-6"></div>
           <p class="text-sm tracking-widest uppercase font-semibold">Chhatra S. Singhi</p>
           <p class="text-[10px] tracking-widest uppercase text-neutral-400 mt-1">Founding Principal</p>
        </div>
      </div>
    </div>

  </div>
</section>